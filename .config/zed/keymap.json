// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
    // Disabled keybindings
    {
        "bindings": {
            "cmd-.": null,
            "cmd-,": null,
            "cmd-o": null,
            "cmd-;": null
        }
    },
    {
        "context": "Pane",
        "bindings": {
            "ctrl-1": null,
            "ctrl-2": null,
            "ctrl-3": null,
            "ctrl-4": null,
            "ctrl-5": null,
            "ctrl-6": null,
            "ctrl-7": null,
            "ctrl-8": null,
            "ctrl-9": null
        }
    },
    {
        "context": "Workspace",
        "bindings": {
            "cmd-1": null,
            "cmd-2": null,
            "cmd-3": null,
            "cmd-4": null,
            "cmd-5": null,
            "cmd-6": null,
            "cmd-7": null,
            "cmd-8": null,
            "cmd-9": null,
            "cmd-j": null
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "cmd-'": null,
            "cmd-/": null
        }
    },
    {
        "context": "ProjectPanel",
        "bindings": {
            "tab": null
        }
    },
    {
        "context": "vim_mode == normal",
        "bindings": {
            "ctrl-f": null,
            "ctrl-a": null,
            "tab": "project_panel::ToggleFocus"
        }
    },

    // Global bindings
    {
        "bindings": {
            "cmd-,": "workspace::ToggleLeftDock",
            "cmd-.": "workspace::ToggleRightDock"
        }
    },

    // Workspace
    {
        "context": "Workspace",
        "bindings": {
            "cmd-1": ["pane::ActivateItem", 0],
            "cmd-2": ["pane::ActivateItem", 1],
            "cmd-3": ["pane::ActivateItem", 2],
            "cmd-4": ["pane::ActivateItem", 3],
            "cmd-5": ["pane::ActivateItem", 4],
            "cmd-6": ["pane::ActivateItem", 5],
            "cmd-7": ["pane::ActivateItem", 6],
            "cmd-8": ["pane::ActivateItem", 7],
            "cmd-9": ["pane::ActivateItem", 8],
            "ctrl a": "editor::ToggleCodeActions",
            "ctrl-f": "pane::DeploySearch",
            "cmd-j": "outline::Toggle",
            "cmd-shift-Space": "workspace::ToggleBottomDock",
            "ctrl-g o": "git::Diff"
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "cmd-i": "editor::Hover",
            "cmd-8": ["editor::SelectNext", { "replace_newest": false }],
            "cmd-d": "editor::ToggleSelectedDiffHunks",
            "cmd-/": "assistant::InlineAssist"
        }
    },
    {
        "context": "ProjectPanel",
        "bindings": {
            "h": "menu::SelectPrevious",
            "l": "menu::SelectNext",
            "tab": "project_panel::ToggleFocus",
            "shift-h": "menu::SelectFirst",
            "shift-l": "menu::SelectLast",
            "ctrl-n": "git_panel::ToggleFocus"
        }
    },
    {
        "context": "GitPanel",
        "bindings": {
            "h": "menu::SelectPrevious",
            "l": "menu::SelectNext",
            "tab": "git_panel::ToggleFocus",
            "shift-h": "menu::SelectFirst",
            "shift-l": "menu::SelectLast",
            "ctrl-n": "project_panel::ToggleFocus"
        }
    },
    // Vim specific bindings
    {
        "context": "vim_mode == normal",
        "bindings": {
            "0": "vim::FirstNonWhitespace",
            "r": "pane::ActivateNextItem",
            "h": "vim::Up",
            "l": "vim::Down",
            "j": "vim::Left",
            "k": "vim::Right",
            ", a": "editor::ToggleCodeActions",
            "Space": "file_finder::Toggle",
            "Backspace": "pane::CloseActiveItem"
        }
    },
    {
        "context": "vim_mode == visual",
        "bindings": {
            "h": "vim::Up",
            "l": "vim::Down",
            "j": "vim::Left",
            "k": "vim::Right"
        }
    }
]
